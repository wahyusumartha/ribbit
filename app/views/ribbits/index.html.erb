<% if current_user %>
<div id="createRibbit" class="panel right">
	<h1>Create Ribbit</h1>
	<p>
		<%= form_for @ribbit do |f| %> 
			<%= f.text_area :content, class: 'ribbitText' %> 
			<%= f.submit 'Ribbit!' %>
		<% end %>
	</p>
</div>
<% end %> 
<div class="panel left">
	<h1>Public Ribbits</h1>
	<% @ribbits.each do |ribbit| %> 
		<div class="ribbitWrapper">
			<a href="<%= user_path ribbit.user %>">
				<img class="avatar" src="<%= ribbit.user.avatarurl %>"/>
				<span class="name">@<%= ribbit.user.username %></span>
			</a>
			<span class="time"><%= time_ago(ribbit)%></span>
			<p><%= ribbit.content %></p>
		</div>
	<% end %>
</div>